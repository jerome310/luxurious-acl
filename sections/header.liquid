<style>
    body {
        color: #ffffff;
    }

    @font-face {
        font-family: 'AustrisaDemo';
        src: url('https://cdn.shopify.com/s/files/1/0930/9605/0979/files/AustrisaDemo-woqgw.otf?v=1740534414') format('opentype');
        font-weight: normal;
        font-style: normal;
    }

    .video-header {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    .video-container video {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        transform: translate(-50%, -50%);
    }

    .overlay {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        padding: 20px 60px;
        width: 100%;
    }

    .background-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        background-color: transparent;
        transition: all 0.3s ease-in-out;
        z-index: 1;
    }

    .background-wrapper.white-background {
        background-color: white;
        height: 200px;
    }

    .logo {
        font-family: 'AustrisaDemo', sans-serif;
        font-size: 50px;
        color: white;
        font-weight: bold;
        text-transform: uppercase;
        padding: 10px 20px;
        border-radius: 10px;
        margin-right: 60px;
    }

    .nav-links {
        display: flex;
        gap: 50px;
        font-size: 20px;
        margin: 0 auto;
        flex: 0 1 auto;
    }

    .nav-links a {
        position: relative;
        text-decoration: none;
        color: white;
        font-weight: 500;
        transition: color 0.3s ease-in-out;
        display: flex;
        align-items: center;
    }

    .nav-links a::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -5px;
        width: 100%;
        height: 2px;
        background-color: white;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease-in-out;
    }

    .nav-links a:hover::after {
        transform: scaleX(1);
    }

    .nav-link-icons {
        display: flex;
        align-items: center;
        gap: 30px;
        margin-left: 60px;
    }

    .nav-link-icons svg {
        width: 24px;
        height: 24px;
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
        color: white;
        display: block;
    }

    .nav-link-icons svg:hover {
        transform: scale(1.1);
    }

    .dropdown-arrow {
        width: 16px;
        height: 16px;
        margin-left: 5px;
        fill: none;
        stroke: white;
        stroke-width: 2;
    }

    /* Mega Menu Styles */
    .mega-menu {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        z-index: 1;
        transition: opacity 0.15s ease, transform 0.15s ease;
        /* 2x faster transition */
    }

    /* Show mega menu instantly on hover */
    .nav-links a:hover+.mega-menu {
        visibility: visible;
        opacity: 1;
        transform: translateY(0);
    }

    /* Mega Menu Content - Initially Hidden */
    .mega-menu-content {
        display: flex;
        width: 100%;
        justify-content: space-around;
        padding-bottom: 40px;
        opacity: 0;
        transform: translateY(10px);
        transition: opacity 0.5s ease 0.5s, transform 0.5s ease 0.5s;
        /* Faster transition with delay */
    }

    /* Hover effect for mega menu content */
    .nav-links a:hover+.mega-menu .mega-menu-content {
        opacity: 1;
        transform: translateY(0);
    }

    /* Reverse transition for content when leaving */
    .mega-menu:not(:hover) .mega-menu-content {
        opacity: 0;
        transform: translateY(10px);
    }

    /* Add a delay on the exit so everything smoothly disappears */
    .mega-menu:not(:hover) {
        visibility: hidden;
        opacity: 0;
        transform: translateY(-10px);
        transition: opacity 0.15s ease, transform 0.15s ease 0.5s;
        /* 2x faster fade-out transition */
    }

    .mega-menu-section {
        text-align: left;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .mega-menu-section h3 {
        font-size: 18px;
        font-weight: bold;
        color: #000;
    }

    .mega-menu-section h1 a {
        display: inline-block;
        color: #000;
        text-decoration: none;
        font-weight: bold;
        font-size: 25px;
        transition: color 0.3s ease;
        padding-bottom: 10px;
        position: relative;
    }

    .mega-menu-section h1 a::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 2px;
        background-color: #666;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
    }

    .mega-menu-section h1 a:hover::after {
        transform: scaleX(1);
    }

    .mega-menu-section a {
        display: inline-block;
        color: #000;
        text-decoration: none;
        font-size: 16px;
        transition: color 0.3s ease;
        padding-bottom: 5px;
        position: relative;
        width: fit-content;
    }

    .mega-menu-section a::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 2px;
        background-color: #666;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
    }

    .mega-menu-section a:hover::after {
        transform: scaleX(1);
    }

    .nav-links a.underline-black::after {
        background-color: black;
    }

    .mega-menu-gap-filler {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        height: 20px;
        background-color: transparent;
        z-index: 1;
    }

    /* ACL Image Gallery */
    .image-gallery {
        display: flex;
        justify-content: space-between;
        gap: 20px;
    }

    /* Image Container */
    .image-item {
        position: relative;
        width: 250px;
        height: 200px;
        overflow: hidden;
        border-radius: 10px;
    }

    /* Image Styling */
    .image-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
    }

    /* Product Text - Bottom Center Inside Image */
    .image-item p {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #ffffff;
        padding: 5px 10px;
        font-size: 25px;
        border-radius: 5px;
        width: 90%;
        font-weight: bold;
        text-align: center;
    }

    /* Shop Text - Hidden Initially */
    .shop-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(255, 255, 255, 0.8);
        color: black;
        padding: 8px 15px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        opacity: 0;
        transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

    /* Hover Effects */
    .image-item:hover img {
        transform: scale(1.1);
    }

    .image-item:hover .shop-text {
        opacity: 1;
        transform: translate(-50%, -60%);
    }

    /* Show the shop text once the mega menu appears */
    .nav-links a:hover+.mega-menu .image-item:hover .shop-text {
        opacity: 1;
        transform: translate(-50%, -60%);
    }

    /* Added Smooth Transition for Mega Menu */
    .mega-menu-content:hover {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    @media (max-width: 768px) {
        .video-container video {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100vw;
            height: 100vh;
            object-fit: cover;
            transform: translate(-50%, -50%);
        }

        .nav-links {
            display: none;
        }

        .hamburger {
            display: block;
            cursor: pointer;
            z-index: 100;
        }

        .hamburger-icon {
            width: 30px;
            height: 3px;
            background-color: white;
            margin: 5px 0;
            transition: 0.3s;
        }

        .hamburger.active .hamburger-icon:nth-child(1) {
            transform: rotate(45deg);
            position: relative;
            top: 8px;
        }

        .hamburger.active .hamburger-icon:nth-child(2) {
            opacity: 0;
        }

        .hamburger.active .hamburger-icon:nth-child(3) {
            transform: rotate(-45deg);
            position: relative;
            top: -8px;
        }

        .nav-links.active {
            display: block;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #222;
            width: 100%;
            padding: 20px;
            box-sizing: border-box;
        }

        .nav-links a {
            color: white;
            font-size: 20px;
            padding: 10px;
            text-align: center;
        }

        .nav-link-icons {
            margin-left: 0;
            gap: 20px;
        }
        
        .nav-link-icons svg {
            width: 22px;
            height: 22px;
        }

        /* Adjust overlay padding for mobile */
        .overlay {
            padding: 15px 20px;
            justify-content: space-between;
        }

        /* Adjust logo size and spacing */
        .logo {
            font-size: 40px;
            margin-right: 0;
            padding: 5px 10px;
        }

        /* Adjust icon container spacing */
        .nav-link-icons {
            margin-left: 0;
            gap: 25px;
            padding-right: 5px;
        }

        /* Adjust hamburger position */
        .hamburger {
            padding-left: 5px;
        }

        /* Keep icons consistent size */
        .nav-link-icons svg {
            width: 24px;
            height: 24px;
        }
    }
</style>


