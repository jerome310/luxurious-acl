<style>
    body {
        color: #ffffff;
    }

    @font-face {
        font-family: 'AustrisaDemo';
        src: url('https://cdn.shopify.com/s/files/1/0930/9605/0979/files/AustrisaDemo-woqgw.otf?v=1740534414') format('opentype');
        font-weight: normal;
        font-style: normal;
    }

    .video-header {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    .video-container video {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        transform: translate(-50%, -50%);
    }

    .overlay {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
        transition: all 0.3s ease-in-out;
        width: 100%;
    }

    .background-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        background-color: transparent;
        transition: all 0.3s ease-in-out;
        z-index: 1;
    }

    .background-wrapper.white-background {
        background-color: white;
        height: 200px;
    }

    .logo {
        font-family: 'AustrisaDemo', sans-serif;
        font-size: 50px;
        color: white;
        font-weight: bold;
        text-transform: uppercase;
        padding: 10px 20px;
        border-radius: 10px;
    }

    .nav-links {
        display: flex;
        gap: 30px;
        font-size: 20px;
    }

    .nav-links a {
        position: relative;
        text-decoration: none;
        color: white;
        font-weight: 500;
        transition: color 0.3s ease-in-out;
        display: flex;
        align-items: center;
    }

    .nav-links a::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -5px;
        width: 100%;
        height: 2px;
        background-color: white;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease-in-out;
    }

    .nav-links a:hover::after {
        transform: scaleX(1);
    }

    .nav-link-icons {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .nav-link-icons svg {
        width: 28px;
        height: 28px;
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
        color: white;
    }

    .nav-link-icons svg:hover {
        transform: scale(1.1);
    }

    .dropdown-arrow {
        width: 16px;
        height: 16px;
        margin-left: 5px;
        fill: none;
        stroke: white;
        stroke-width: 2;
    }

    /* Mega Menu Styles */
    .mega-menu {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        z-index: 1;
        padding: 20px 0;
    }

    .shop-menu-wrapper:hover .mega-menu,
    .mega-menu:hover {}

    .mega-menu-content {
        display: flex;
        justify-content: space-around;
        padding: 20px;
    }

    .mega-menu-section {
        text-align: left;
    }

    .mega-menu-section h3 {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #000;
    }

    .mega-menu-section a {
        display: block;
        color: #333;
        text-decoration: none;
        font-size: 16px;
        margin-bottom: 8px;
        transition: color 0.3s ease;
    }

    .mega-menu-section a:hover {
        color: #666;
    }

    .nav-links a.underline-black::after {
        background-color: black;
    }
</style>

<section class="video-header">
    <div class="video-container">
        <video autoplay muted loop playsinline>
            <source src="https://cdn.shopify.com/videos/c/o/v/887f448c8fa84389a5f4ab757b23df7c.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
    <div class="background-wrapper"></div>
    <div class="overlay">
        <h1 class="logo">ACL</h1>
        <div class="nav-links">
            <a href="#">Home</a>
            <div class="shop-menu-wrapper">
                <a href="#" class="shop-menu">Shop <svg class="dropdown-arrow" xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24">
                        <path d="M6 9l6 6 6-6"></path>
                    </svg></a>
                <div class="mega-menu">
                    <div class="mega-menu-content">
                        <div class="mega-menu-section">
                            <h3>Categories</h3>
                            <a href="#">New Arrivals</a>
                            <a href="#">Best Sellers</a>
                            <a href="#">Clothing</a>
                            <a href="#">Accessories</a>
                        </div>
                        <div class="mega-menu-section">
                            <h3>Featured</h3>
                            <a href="#">Spring Collection</a>
                            <a href="#">Limited Edition</a>
                            <a href="#">Gift Ideas</a>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#">Collections <svg class="dropdown-arrow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M6 9l6 6 6-6"></path>
                </svg></a>
            <a href="#">Contact</a>
        </div>
        <div class="nav-link-icons">
            <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <svg class="shopping-bag-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"></path>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <path d="M16 10a4 4 0 01-8 0"></path>
            </svg>
        </div>
    </div>
</section>

<script>
    // Get the elements
    const shopMenuWrapper = document.querySelector('.shop-menu-wrapper');
    const overlay = document.querySelector('.overlay');
    const logo = document.querySelector('.logo');
    const navLinks = document.querySelectorAll('.nav-links a');
    const navIcons = document.querySelectorAll('.nav-link-icons svg');
    const shopDownArrow = document.querySelector('.shop-menu svg');
    const collectionDownArrow = document.querySelector('.nav-links a[href="#"]:nth-child(3) svg');
    const megaMenu = document.querySelector('.mega-menu');
    const backgroundWrapper = document.querySelector('.background-wrapper');

    function updateBackgroundHeight() {
        const overlayHeight = overlay.offsetHeight;
        const megaMenuHeight = megaMenu.offsetHeight;
        const totalHeight = overlayHeight + megaMenuHeight;

        // Update the background-wrapper height when showing menu
        if (backgroundWrapper.classList.contains('white-background')) {
            backgroundWrapper.style.height = `${totalHeight}px`;
        }
    }

    function showMegaMenu() {
        // Show background and menu immediately
        backgroundWrapper.classList.add('white-background');
        megaMenu.style.visibility = 'visible';
        megaMenu.style.opacity = '1';
        megaMenu.style.transform = 'translateY(0)';

        // Update background height
        requestAnimationFrame(() => {
            updateBackgroundHeight();
        });

        // Update colors immediately
        logo.style.color = 'black';
        navLinks.forEach(link => {
            link.style.color = 'black';
            link.classList.add('underline-black');
        });
        navIcons.forEach(icon => icon.style.color = 'black');
        if (shopDownArrow) shopDownArrow.style.stroke = 'black';
        if (collectionDownArrow) collectionDownArrow.style.stroke = 'black';
    }

    function hideMegaMenu() {
        // Hide everything immediately
        megaMenu.style.visibility = 'hidden';
        megaMenu.style.opacity = '0';
        megaMenu.style.transform = 'translateY(-10px)';
        backgroundWrapper.style.height = '';
        backgroundWrapper.classList.remove('white-background');

        // Reset colors
        logo.style.color = '';
        navLinks.forEach(link => {
            link.style.color = '';
            link.classList.remove('underline-black');
        });
        navIcons.forEach(icon => icon.style.color = '');
        if (shopDownArrow) shopDownArrow.style.stroke = '';
        if (collectionDownArrow) collectionDownArrow.style.stroke = '';
    }

    let timeoutId;

    shopMenuWrapper.addEventListener('mouseenter', () => {
        clearTimeout(timeoutId);
        showMegaMenu();
    });

    megaMenu.addEventListener('mouseenter', () => {
        clearTimeout(timeoutId);
        showMegaMenu();
    });

    shopMenuWrapper.addEventListener('mouseleave', (e) => {
        if (!e.relatedTarget || !e.relatedTarget.closest('.mega-menu')) {
            timeoutId = setTimeout(hideMegaMenu, 100);
        }
    });

    megaMenu.addEventListener('mouseleave', (e) => {
        if (!e.relatedTarget || !e.relatedTarget.closest('.shop-menu-wrapper')) {
            timeoutId = setTimeout(hideMegaMenu, 100);
        }
    });
</script>