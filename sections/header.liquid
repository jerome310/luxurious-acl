<style>
    body {
        color: #ffffff;
    }

    @font-face {
        font-family: 'AustrisaDemo';
        src: url('https://cdn.shopify.com/s/files/1/0930/9605/0979/files/AustrisaDemo-woqgw.otf?v=1740534414') format('opentype');
        font-weight: normal;
        font-style: normal;
    }

    .video-header {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    .video-container video {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        transform: translate(-50%, -50%);
    }

    .overlay {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        padding: 15px 40px;
    }

    /* .overlay:hover {
        background-color: white;
    } */

    .logo {
        font-family: 'AustrisaDemo', sans-serif;
        font-size: 50px;
        color: white;
        font-weight: bold;
        text-transform: uppercase;
        padding: 10px 20px;
        border-radius: 10px;
    }

    .nav-links {
        display: flex;
        gap: 30px;
        font-size: 20px;
    }

    .nav-links a {
        position: relative;
        text-decoration: none;
        color: white;
        font-weight: 500;
        transition: color 0.3s ease-in-out;
        display: flex;
        align-items: center;
    }

    .nav-links a::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -5px;
        width: 100%;
        height: 2px;
        background-color: white;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease-in-out;
    }

    .nav-links a:hover::after {
        transform: scaleX(1);
    }

    .nav-link-icons {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .nav-link-icons svg {
        width: 28px;
        height: 28px;
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
        color: white;
    }

    .nav-link-icons svg:hover {
        transform: scale(1.1);
    }

    .dropdown-arrow {
        width: 16px;
        height: 16px;
        margin-left: 5px;
        fill: none;
        stroke: white;
        stroke-width: 2;
    }

    /* Mega Menu Styles */
    .mega-menu {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background-color: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        transition: transform 0.5s ease-in-out, opacity 0.5s ease-in-out;
        padding: 20px;
    }

    .shop-menu-wrapper:hover .mega-menu,
    .mega-menu:hover {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
        background-color: white;
    }

    .shop-menu-wrapper:hover .overlay {
        background-color: white;
    }

    .mega-menu-content {
        display: flex;
        justify-content: space-around;
        padding: 20px;
    }

    .mega-menu-section {
        text-align: left;
    }

    .mega-menu-section h3 {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #000;
    }

    .mega-menu-section a {
        display: block;
        color: #333;
        text-decoration: none;
        font-size: 16px;
        margin-bottom: 8px;
        transition: color 0.3s ease;
    }

    .mega-menu-section a:hover {
        color: #666;
    }
</style>

<section class="video-header">
    <div class="video-container">
        <video autoplay muted loop playsinline>
            <source src="https://cdn.shopify.com/videos/c/o/v/887f448c8fa84389a5f4ab757b23df7c.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
    <div class="overlay">
        <h1 class="logo">ACL</h1>
        <div class="nav-links">
            <a href="#">Home</a>
            <div class="shop-menu-wrapper">
                <a href="#" class="shop-menu">Shop <svg class="dropdown-arrow" xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24">
                        <path d="M6 9l6 6 6-6"></path>
                    </svg></a>
                <div class="mega-menu">
                    <div class="mega-menu-content">
                        <div class="mega-menu-section">
                            <h3>Categories</h3>
                            <a href="#">New Arrivals</a>
                            <a href="#">Best Sellers</a>
                            <a href="#">Clothing</a>
                            <a href="#">Accessories</a>
                        </div>
                        <div class="mega-menu-section">
                            <h3>Featured</h3>
                            <a href="#">Spring Collection</a>
                            <a href="#">Limited Edition</a>
                            <a href="#">Gift Ideas</a>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#">Collections <svg class="dropdown-arrow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M6 9l6 6 6-6"></path>
                </svg></a>
            <a href="#">Contact</a>
        </div>
        <div class="nav-link-icons">
            <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <svg class="shopping-bag-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"></path>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <path d="M16 10a4 4 0 01-8 0"></path>
            </svg>
        </div>
    </div>
</section>

<script>
    // Get the elements
    const shopMenu = document.querySelector('.shop-menu');
    const overlay = document.querySelector('.overlay');
    const logo = document.querySelector('.logo');
    const navLinks = document.querySelectorAll('.nav-links a');
    const navIcons = document.querySelectorAll('.nav-link-icons svg');
    const shopDownArrow = document.querySelector('.shop-menu svg'); // Assuming downarrow is an SVG in shop-menu
    const collectionDownArrow = document.querySelector('.nav-links a[href="#"]:nth-child(3) svg'); // Adjusted selector for Collections downarrow

    // Add event listeners for mouse enter and leave
    shopMenu.addEventListener('mouseenter', () => {
        overlay.style.backgroundColor = 'white'; // Change overlay background to white on hover
        logo.style.color = 'black'; // Change logo color to black
        navLinks.forEach(link => link.style.color = 'black'); // Change nav link colors to black
        navIcons.forEach(icon => icon.style.color = 'black'); // Change icon colors to black

        // Change both down arrows to black
        if (shopDownArrow) shopDownArrow.style.stroke = 'black'; // Change shop down arrow color to black
        if (collectionDownArrow) collectionDownArrow.style.stroke = 'black'; // Change collections down arrow color to black
    });

    shopMenu.addEventListener('mouseleave', () => {
        overlay.style.backgroundColor = ''; // Reset overlay background when not hovering
        logo.style.color = ''; // Reset logo color
        navLinks.forEach(link => link.style.color = ''); // Reset nav link colors
        navIcons.forEach(icon => icon.style.color = ''); // Reset icon colors

        // Reset both down arrows to their original color
        if (shopDownArrow) shopDownArrow.style.stroke = ''; // Reset shop down arrow color
        if (collectionDownArrow) collectionDownArrow.style.stroke = ''; // Reset collections down arrow color
    });
</script>