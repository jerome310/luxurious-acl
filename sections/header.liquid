        display: flex;
        gap: 50px;
        font-size: 20px;
        margin: 0 auto;
        flex: 0 1 auto;
    }

    .nav-links a {
        position: relative;
        text-decoration: none;
        color: white;
        font-weight: 500;
        transition: color 0.3s ease-in-out;
        display: flex;
        align-items: center;
    }

    .nav-links a::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -5px;
        width: 100%;
        height: 2px;
        background-color: white;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease-in-out;
    }

    .nav-links a:hover::after {
        transform: scaleX(1);
    }

    .nav-link-icons {
        display: flex;
        align-items: center;
        gap: 30px;
        margin-left: 60px;
    }

    .nav-link-icons svg {
        width: 24px;
        height: 24px;
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
        color: white;
        display: block;
    }

    .nav-link-icons svg:hover {
        transform: scale(1.1);
    }

    .dropdown-arrow {
        width: 16px;
        height: 16px;
        margin-left: 5px;
        fill: none;
        stroke: white;
        stroke-width: 2;
    }

    /* Mega Menu Styles */
    .mega-menu {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        z-index: 1;
        transition: opacity 0.15s ease, transform 0.15s ease;
        /* 2x faster transition */
    }

    /* Show mega menu instantly on hover */
    .nav-links a:hover+.mega-menu {
        visibility: visible;
        opacity: 1;
        transform: translateY(0);
    }

    /* Mega Menu Content - Initially Hidden */
    .mega-menu-content {
        display: flex;
        width: 100%;
        justify-content: space-around;
        padding-bottom: 40px;
        opacity: 0;
        transform: translateY(10px);
        transition: opacity 0.5s ease 0.5s, transform 0.5s ease 0.5s;
        /* Faster transition with delay */
    }

    /* Hover effect for mega menu content */
    .nav-links a:hover+.mega-menu .mega-menu-content {
        opacity: 1;
        transform: translateY(0);
    }

    /* Reverse transition for content when leaving */
    .mega-menu:not(:hover) .mega-menu-content {
        opacity: 0;
        transform: translateY(10px);
    }

    /* Add a delay on the exit so everything smoothly disappears */
    .mega-menu:not(:hover) {
        visibility: hidden;
        opacity: 0;
        transform: translateY(-10px);
        transition: opacity 0.15s ease, transform 0.15s ease 0.5s;
        /* 2x faster fade-out transition */
    }

    .mega-menu-section {
        text-align: left;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .mega-menu-section h3 {
        font-size: 18px;
        font-weight: bold;
        color: #000;
    }

    .mega-menu-section h1 a {
        display: inline-block;
        color: #000;
        text-decoration: none;
